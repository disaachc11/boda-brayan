---
import '../styles/font_h1_styles.css'
---

<div class="w-full h-max py-10 flex flex-col justify-center items-center">
  <h1 class="tangerine text-5xl">Faltan</h1>
  <div class="w-[85%] h-20 flex flex-col justify-center items-center">
    <div
      class="flex flex-row justify-around items-center w-full h-10 border-b-[1px] border-slate-400"
    >
      <p class="text-2xl font-bold tangerine">DÃ­as</p>
      <p class="text-2xl font-bold tangerine">Horas</p>
      <p class="text-2xl font-bold tangerine">Min</p>
      <p class="text-2xl font-bold tangerine">Seg</p>
    </div>
    <div class="w-[85%] h-24 flex flex-col justify-center items-center">
      <div class="flex flex-row justify-around items-center w-full">
        <p class="text-4xl font-medium tangerine days">0</p>
        <p class="text-4xl font-medium tangerine">:</p>
        <p class="text-4xl font-medium tangerine hours">00</p>
        <p class="text-4xl font-medium tangerine">:</p>
        <p class="text-4xl font-medium tangerine minutes">00</p>
        <p class="text-4xl font-medium tangerine">:</p>
        <p class="text-4xl font-medium tangerine seconds">00</p>
      </div>
    </div>
  </div>
  <script>
    let countDownDate = new Date("Jun 21, 2025 18:00:00").getTime();
    let x = setInterval(function () {
      let now = new Date().getTime();
      let distance = countDownDate - now;
      let days = Math.floor(distance / (1000 * 60 * 60 * 24));
      let hours = Math.floor(
        (distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
      );
      let minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      let seconds = Math.floor((distance % (1000 * 60)) / 1000);

      const daysElement = document.querySelector(".days");
      if (daysElement) {
        daysElement.innerHTML = days.toString();
      }
      const hoursElement = document.querySelector(".hours");
      if (hoursElement) {
        hoursElement.innerHTML = hours.toString().padStart(2, "0");
      }
      const minutesElement = document.querySelector(".minutes");
      if (minutesElement) {
        minutesElement.innerHTML = minutes.toString().padStart(2, "0");
      }
      const secondsElement = document.querySelector(".seconds");
      if (secondsElement) {
        secondsElement.innerHTML = seconds.toString().padStart(2, "0");
      }

      if (distance < 0) {
        clearInterval(x);
        const daysElement = document.querySelector(".days");
        if (daysElement) {
          daysElement.innerHTML = "0";
        }
        if (hoursElement) {
          hoursElement.innerHTML = "00";
        }
        if (minutesElement) {
          minutesElement.innerHTML = "00";
        }
        if (secondsElement) {
          secondsElement.innerHTML = "00";
        }
      }
    }, 1000);
  </script>

  <style>

  </style>
</div>
