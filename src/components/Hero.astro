---
interface Props {
  couple: string;
  date: string;
}

const { couple, date } = Astro.props;

// Formatear la fecha
const weddingDate = new Date(date);
const formattedDate = weddingDate.toLocaleDateString('es-ES', {
  day: 'numeric',
  month: 'long',
  year: 'numeric'
});
---

<section id="inicio" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <div class="absolute inset-0 z-0">
    <img 
      src="/placeholder.svg?height=1080&width=1920" 
      alt="Fondo de boda" 
      class="w-full h-full object-cover opacity-60"
    />
    <div class="absolute inset-0 bg-black/30"></div>
  </div>
  
  <div class="relative z-10 text-center text-white px-4 py-20">
    <p class="text-lg mb-4 uppercase tracking-widest">Â¡NOS CASAMOS!</p>
    <h1 class="font-script text-5xl md:text-7xl mb-6">{couple}</h1>
    <div class="w-24 h-0.5 bg-white mx-auto mb-6"></div>
    <p class="text-xl mb-8">{formattedDate}</p>
    <a href="#rsvp" class="inline-block bg-white text-[#a27b5c] py-3 px-8 rounded-full hover:bg-[#d4b08c] hover:text-white transition-colors duration-300">
      Confirmar Asistencia
    </a>
  </div>
  
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10 animate-bounce">
    <a href="#countdown" class="text-white">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
      </svg>
    </a>
  </div>
</section>

