---
// Puedes personalizar esta galería con tus propias imágenes
const images = [
  { src: "/placeholder.svg?height=600&width=400", alt: "Foto de pareja 1" },
  { src: "/placeholder.svg?height=600&width=400", alt: "Foto de pareja 2" },
  { src: "/placeholder.svg?height=600&width=400", alt: "Foto de pareja 3" },
  { src: "/placeholder.svg?height=600&width=400", alt: "Foto de pareja 4" },
  { src: "/placeholder.svg?height=600&width=400", alt: "Foto de pareja 5" },
  { src: "/placeholder.svg?height=600&width=400", alt: "Foto de pareja 6" },
];
---

<section id="galeria" class="section bg-white">
  <h2 class="section-title">Nuestra Historia</h2>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
    {images.map((image, index) => (
      <div class="overflow-hidden rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
        <img 
          src={image.src || "/placeholder.svg"} 
          alt={image.alt} 
          class="w-full h-64 object-cover hover:scale-105 transition-transform duration-500"
        />
      </div>
    ))}
  </div>
</section>

